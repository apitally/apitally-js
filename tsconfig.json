{
  "include": ["src"],
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "outDir": "./dist/tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "isolatedModules": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
